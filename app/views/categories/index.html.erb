<h1 class="text-center mt-4">Category listing</h1>

<div class="container">

    <% @categories.each do |category| %>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="list-group text-center shadow mb-5 bg-white rounded">
                    <div class="list-group-item font-italic">
                        <%= link_to category.name, category %>
                    </div>
                    
                        
                    
                    <div class="card-footer text-muted">
                        <small>Added <%= time_ago_in_words(category.created_at) %> ago</small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>

<div class="flickr_pagination mb-4">
    
    <%= will_paginate @categories, :container => false %>
</div>
